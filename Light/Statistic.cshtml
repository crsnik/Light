@page
@model StatisticModel
@{
    ViewData["Title"] = "Статистика та Звіти";
}

<h1>@ViewData["Title"]</h1>

<!-- Форма для введення статистичних даних -->
<form method="post" asp-page-handler="SubmitStatistics">
    <label for="adminState">Стан адміністратора:</label>
    <input type="text" id="adminState" name="adminState" asp-for="AdminState" required />

    <label for="dateTime">Дата та час:</label>
    <input type="datetime-local" id="dateTime" name="dateTime" asp-for="DateTime" required />

    <label for="buildingId">Ідентифікатор будівлі:</label>
    <input type="number" id="buildingId" name="buildingId" asp-for="BuildingId" required />

    <button type="submit">Зберегти</button>
</form>

<!-- Відображення звітів -->
@if (Model.Statistics != null && Model.Statistics.Any())
{
        <h2>Звіти:</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Стан адміністратора</th>
                    <th>Дата та час</th>
                    <th>Ідентифікатор будівлі</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var stat in Model.Statistics)
            {
                        <tr>
                            <td>@stat.Id</td>
                            <td>@stat.AdminState</td>
                            <td>@stat.DateTime</td>
                            <td>@stat.BuildingId</td>
                        </tr>
            }
            </tbody>
        </table>
}
